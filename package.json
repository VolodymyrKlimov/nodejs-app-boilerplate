{
  "name": "nodejs-app-boilerplate",
  "version": "0.0.1",
  "description": "Simple boilerplate for nodejs applications.",
  "main": "src/index.js",
  "scripts": {
    "start": "node ./src/index.js",
    "start:dev": "nodemon --exec babel-node ./src/index.js",
    "test": "jest",
    "lint:js": "eslint ./src",
    "lint:staged": "lint-staged",
    "format": "prettier --write src/**/*.{js,ts}"
  },
  "author": "Volodymyr Klimov",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged"
    }
  },
  "lint-staged": {
    "./src/**.js": "eslint",
    "./src/**.{js}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "bracketSpacing": true,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5"
  }
}
